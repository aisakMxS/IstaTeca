<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.solicitud_libro.HomeFragment">

        <ScrollView

            android:id="@+id/scrollView3"
            android:layout_width="0dp"

            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@+id/Rb_intalaciones_solicitud"
                app:layout_constraintStart_toStartOf="@+id/Rb_intalaciones_solicitud"
                tools:context=".MainActivity"
                tools:layout_editor_absoluteX="67dp"
                tools:layout_editor_absoluteY="90dp">

                <EditText
                    android:id="@+id/Txt_cedula_estudante_solicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.771"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/Txt_titulo_solicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Txt_codigo_DEWEY_solicitud" />

                <EditText
                    android:id="@+id/Txt_estado_solicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Txt_titulo_solicitud" />

                <Button
                    android:id="@+id/Btn_fechaEntrega_solicitud"
                    android:layout_width="124dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="80dp"
                    android:text="Capturar fecha"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Cb_documentoHabilitante_solicitud" />

                <EditText
                    android:id="@+id/Txt_bibliotecarioEntrega_solicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Btn_fechaEntrega_solicitud" />

                <EditText
                    android:id="@+id/Txt_fechaMaximaDev_solicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:ems="10"
                    android:inputType="date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Txt_bibliotecarioEntrega_solicitud" />

                <EditText
                    android:id="@+id/Txt_codigo_DEWEY_solicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Txt_cedula_estudante_solicitud" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="219dp"
                    android:layout_marginBottom="33dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="101dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Cedula del Estudiante:"
                    app:layout_constraintEnd_toStartOf="@+id/Txt_cedula_estudante_solicitud"
                    app:layout_constraintHorizontal_bias="0.177"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:text="Codigo DEWEY:"
                    app:layout_constraintEnd_toStartOf="@+id/Txt_codigo_DEWEY_solicitud"
                    app:layout_constraintHorizontal_bias="0.229"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="Titulo Libro:"
                    app:layout_constraintEnd_toStartOf="@+id/Txt_titulo_solicitud"
                    app:layout_constraintHorizontal_bias="0.152"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="48dp"
                    android:text="Estado del libro:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="85dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="47dp"
                    android:text="Documento habilitante"
                    app:layout_constraintEnd_toStartOf="@+id/Cb_documentoHabilitante_solicitud"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="76dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="28dp"
                    android:text="Fecha de entrega:"
                    app:layout_constraintEnd_toStartOf="@+id/Btn_fechaEntrega_solicitud"
                    app:layout_constraintHorizontal_bias="0.206"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="96dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="32dp"
                    android:text="Bibliotecario encargado"
                    app:layout_constraintEnd_toStartOf="@+id/Txt_bibliotecarioEntrega_solicitud"
                    app:layout_constraintHorizontal_bias="0.318"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView20" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="107dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="20dp"
                    android:text="Fecha maxima de devolucion:"
                    app:layout_constraintEnd_toStartOf="@+id/Txt_fechaMaximaDev_solicitud"
                    app:layout_constraintHorizontal_bias="0.355"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView21" />

                <Spinner
                    android:id="@+id/Cb_documentoHabilitante_solicitud"
                    android:layout_width="203dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="24dp"
                    android:entries="@array/documentohabilitante"
                    app:layout_constraintBottom_toTopOf="@+id/Btn_fechaEntrega_solicitud"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView17"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnGuardarSolicitud"
                    android:layout_width="284dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="95dp"
                    android:text="GUARDAR"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/Txt_fechaMaximaDev_solicitud" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </layout>